    // Project Two Row
    .row.justify-content-center.no-gutters
      .col-lg-6
        a(href='https://recipelocker.herokuapp.com/')
          img.img-fluid(src='/assets/img/portfolio/thumbnails/RecipeLocker.png' alt='')
